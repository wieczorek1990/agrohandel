doctype html
html
  head
    meta[name="viewport" content="width=device-width, initial-scale=1.0"]
    title
      = content_for?(:title) ? yield(:title) : 'Agro-Handel'
    meta name="description" content="#{content_for?(:description) ? yield(:description) : 'Agro-Handel'}"
    == stylesheet_link_tag "application", :media => 'all', 'data-turbolinks-track' => true
    == javascript_include_tag 'application', 'data-turbolinks-track' => true
    == csrf_meta_tags
    link href="http://cdnjs.cloudflare.com/ajax/libs/fotorama/4.5.1/fotorama.css" rel="stylesheet"
    script src="http://cdnjs.cloudflare.com/ajax/libs/fotorama/4.5.1/fotorama.js"
    = render 'layouts/ga'
  body
    div class="row"
      div class="col-sm-3"
      div class="col-sm-6"
        div class="row"
          div class="col-xs-3"
          div class="col-xs-6"
            = image_tag 'logo.png', alt: 'Agro-Handel'
            h1 class="logo" Agro-Handel
            h1 class="logo" Pniewy
          div class="col-xs-3"
            a href="#{default_language_path(request.path)}"
              = image_tag 'Flag_of_Poland.png', class: 'flag'
            a href="#{request.path + '?locale=en'}"
              = image_tag 'Flag_of_the_United_Kingdom.png', class: 'flag'
        header
          == render 'layouts/navigation'
        main[role="main"]
          == render 'layouts/messages'
          == yield
        hr
        footer
          = mail_to 'wieczorek1990@gmail.com', '&copy; Å‚w'.html_safe
      div class="col-sm-3"